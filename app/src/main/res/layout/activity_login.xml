<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="230px"
                android:layout_marginRight="230px"
                android:layout_marginTop="200px"
                android:layout_weight="1"
                android:src="@mipmap/access_account" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="Realize o login para acessar sua conta" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:gravity="center"
            android:orientation="vertical">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="180px"
            android:layout_marginRight="180px"
            android:layout_marginBottom="30px"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="180px"
            android:layout_marginRight="180px"
            android:hint="Senha"
            android:inputType="textPassword" />

            <RadioButton
                android:id="@+id/manterLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180px"
                android:layout_marginRight="180px"
                android:text="Manter Login" />

            <Button
                android:id="@+id/buttonAuthLogin"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="192dp"
                android:layout_marginTop="30dp"
                android:text="Acessar" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>